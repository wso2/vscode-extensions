{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
