{
  "name": "api-tryit",
  "displayName": "WSO2 API TryIt",
  "description": "An extension for testing and trying out APIs",
  "version": "1.0.0",
  "publisher": "wso2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wso2/ballerina-plugin-vscode.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-tryit",
          "title": "WSO2 API TryIt",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "api-tryit": [
        {
          "id": "api-tryit.activity.panel",
          "name": "API Explorer",
          "type": "webview",
          "when": "true",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "api-tryit.openTryIt",
        "title": "API TryIt: Open TryIt Panel",
        "icon": "$(globe)"
      },
      {
        "command": "api-tryit.newRequest",
        "title": "New Request",
        "icon": "$(add)"
      },
      {
        "command": "api-tryit.openFromCurl",
        "title": "API TryIt: Open from Curl",
        "icon": "$(globe)"
      },
      {
        "command": "api-tryit.refreshExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "api-tryit.newCollection",
        "title": "New Collection",
        "icon": "$(new-folder)"
      },
      {
        "command": "api-tryit.importCollection",
        "title": "Import Collection",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "api-tryit.openCollection",
        "title": "Open Collection",
        "icon": "$(folder-opened)"
      },
      {
        "command": "api-tryit.plusMenu",
        "title": "Create / Import / Open",
        "icon": "$(add)"
      },
      {
        "command": "api-tryit.settings",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "api-tryit.hello",
        "title": "API TryIt: Hello World"
      },
      {
        "command": "api-tryit.setCollectionsPath",
        "title": "API TryIt: Set Collections Path",
        "icon": "$(folder)"
      },
      {
        "command": "api-tryit.importCollectionPayload",
        "title": "API TryIt: Import Collection Payload",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "api-tryit.plusMenu",
          "when": "view == api-tryit.activity.panel",
          "group": "navigation@0"
        },
        {
          "command": "api-tryit.refreshExplorer",
          "when": "view == api-tryit.activity.panel",
          "group": "navigation@2"
        },
        {
          "command": "api-tryit.newCollection",
          "when": "view == api-tryit.activity.panel",
          "group": "navigation@3"
        },
        {
          "command": "api-tryit.settings",
          "when": "view == api-tryit.activity.panel",
          "group": "navigation@4"
        }
      ],
      "commandPalette": [
        {
          "command": "api-tryit.openTryIt"
        },
        {
          "command": "api-tryit.newRequest",
          "when": "false"
        },
        {
          "command": "api-tryit.refreshExplorer",
          "when": "false"
        },
        {
          "command": "api-tryit.newCollection",
          "when": "false"
        },
        {
          "command": "api-tryit.settings",
          "when": "false"
        },
        {
          "command": "api-tryit.importCollectionPayload",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "API TryIt",
      "properties": {
        "api-tryit.collectionsPath": {
          "type": "string",
          "default": "",
          "description": "Path to the directory containing API collections. If not set, uses the current workspace folder."
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "node ../../common-libs/scripts/package-vsix.js",
    "lint": "eslint src --ext ts",
    "build": "pnpm clean && pnpm run copyFonts && webpack --mode production --devtool hidden-source-map && pnpm run package && pnpm run copyVSIX",
    "copyFonts": "copyfiles -f ./node_modules/@wso2/font-wso2-vscode/dist/* ./resources/font-wso2-vscode/dist/",
    "copyVSIX": "copyfiles *.vsix ./vsix",
    "copyVSIXToRoot": "copyfiles -u 0 \"vsix/*.vsix\" ../../../"
  },
  "devDependencies": {
    "@vscode/vsce": "3.7.0",
    "rimraf": "5.0.5",
    "@types/js-yaml": "4.0.9",
    "@types/vscode": "1.100.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.27.0",
    "typescript": "5.8.3",
    "ts-loader": "9.5.1",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1",
    "copyfiles": "2.4.1",
    "dotenv": "16.4.7",
    "@wso2/api-tryit-visualizer": "workspace:*"
  },
  "dependencies": {
    "@wso2/api-tryit-core": "workspace:*",
    "@wso2/api-tryit-rpc-client": "workspace:*",
    "js-yaml": "4.1.0",
    "vscode-messenger": "0.5.1",
    "vscode-messenger-common": "0.5.1",
    "xstate": "4.38.3",
    "axios": "1.13.2"
  }
}
